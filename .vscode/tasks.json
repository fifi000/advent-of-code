{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "zig build-exe",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "New-Item -ItemType Directory -Force -Path ./zig-out/bin; zig build-exe ${file} -femit-bin=zig-out/bin/debug"
      ]
    },
    {
      "label": "zig build-test",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "New-Item -ItemType Directory -Force -Path ./zig-out/bin; zig test -femit-bin=zig-out/bin/debug-test --test-no-exec ${file}"
      ]
    }
  ]
}
